{
  "compilerOptions": {
    "rootDir": ".",
    "baseUrl": ".",
    "composite": false,
    "declarationMap": false,
    "emitDeclarationOnly": false,
    "importHelpers": true,
    "isolatedModules": true,
    "lib": ["es2022", "dom"],
    "module": "nodenext",
    "moduleResolution": "nodenext",
    "noEmitOnError": true,
    "noFallthroughCasesInSwitch": true,
    "noImplicitOverride": true,
    "noImplicitReturns": true,
    "noUnusedLocals": true,
    "skipLibCheck": true,
    "strict": true,
    "target": "es2022",
    "customConditions": ["@fullstack-dev/source"],
    "paths": {
      "@be/posts": ["libs/backend/data-access/posts/src/index.ts"],
      "@be/users": ["libs/backend/data-access/users/src/index.ts"],
      "@db/prisma": ["libs/db/index.ts"],
      "@db/prisma-client": ["libs/backend/prisma-client/src/index.ts"],
      "@fe/app/data": ["apps/frontend/dev-app/src/app/data"],
      "@fe/auth": ["libs/frontend/core/auth/src/index.ts"],
      "@fe/dashboard": ["libs/frontend/shared/components/src/index.ts"],
      "@fe/layout": ["libs/frontend/core/layout/src/index.ts"],
      "@fe/material": ["libs/frontend/shared/material/src/index.ts"],
      "@fe/pages": ["libs/frontend/core/pages/src/index.ts"],
      "@fe/shared/components": [
        "libs/frontend/shared/components/src/index.ts"
      ],
      "@fe/shared/components/*": [
        "libs/frontend/shared/components/src/*"
      ],
      "@fe/shared/utilities": [
        "libs/frontend/shared/utils/src/index.ts"
      ],
      "@fe/stores": ["libs/frontend/core/stores/src/index.ts"],
      "@fe/tokens": ["libs/frontend/core/tokens/src/index.ts"],
      "@fe/ui": ["libs/frontend/shared/components/ui/src/index.ts"],
      "@fe/user": ["libs/frontend/domains/user/src/index.ts"]
    }
  }
}
