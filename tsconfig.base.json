{
  "compilerOptions": {
    "baseUrl": ".",
    "composite": false,
    "declarationMap": false,
    "emitDeclarationOnly": false,
    "importHelpers": true,
    "isolatedModules": true,
    "lib": ["es2022", "dom"],
    "module": "nodenext",
    "moduleResolution": "nodenext",
    "noEmitOnError": true,
    "noFallthroughCasesInSwitch": true,
    "noImplicitOverride": true,
    "noImplicitReturns": true,
    "noUnusedLocals": true,
    "skipLibCheck": true,
    "strict": true,
    "target": "es2022",
    "customConditions": ["@fullstack-dev/source"],
    "paths": {
      "@db/posts": ["libs/backend/data-access/posts/src/index.ts"],
      "@db/prisma": ["libs/db/index.ts"],
      "@db/prisma-client": ["libs/backend/prisma-client/src/index.ts"],
      "@db/users": ["libs/backend/data-access/users/src/index.ts"],
      "@fe/date-utilities": [
        "libs/frontend/utilities/date-utilities/src/index.ts"
      ],
      "@fe/layout": ["libs/frontend/layout/src/index.ts"],
      "@fe/tokens": ["libs/frontend/tokens/index.ts"],
      "@fe/user": ["libs/frontend/user/src/index.ts"],
      "@fe/app/data": ["apps/frontend/dev-app/src/app/data"]
    }
  }
}
